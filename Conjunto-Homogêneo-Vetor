#include<stdio.h>
struct vendedor {
int cod;
float salario;
float vendas;
float comissao;
};
int main (){

    struct vendedor v[4];
    int i;

    for(i=0; i<4; i++){
    printf("Codigo do vendedor %i: ", i+1);
    scanf("%i", &v[i].cod);
    printf("Salario do vendedor %i: ", i+1);
    scanf("%f", &v[i].salario);
    printf("Vendas do vendedor %i: ", i+1);
    scanf("%f", &v[i].vendas);
    printf("\n");

        if(v[i].vendas < 1000){
            v[i].comissao = (v[i].salario * 0.03) + v[i].salario;
        }
        else if(v[i].vendas >= 1000 && v[i].vendas < 2000){
            v[i].comissao = (v[i].salario * 0.05) + v[i].salario;
        }
        else{
            v[i].comissao = (v[i].salario * 0.10) + v[i].salario;
        }
    }

        for(i=0; i<4; i++){
        printf("\n\tVendedor %i \nCod: %i \nVendas: %.f \nSalario Fixo: %.f \nSalario Total: %.f", i+1, v[i].cod, v[i].vendas, v[i].salario, v[i].comissao);
        }

return 0;
}
